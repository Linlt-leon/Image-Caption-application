.module3{
  display: flex;
  margin: 50rpx;
  width: 100%;
  height: 30%;
  flex-direction: column;
  align-items: center;
  justify-content: space-around; 
}

.module3_item{
  display: flex;
  width: 400rpx;
  height: 88rpx;
  margin: 20rpx;
  align-items: center;
  justify-content: center; 
}

.share{
  font-size:20px; 
  font-family: "微软雅黑";
  color: #fff;
  border-radius: 45rpx;
  text-shadow:1px 1px #aaa;
  box-shadow:0rpx 10rpx 50rpx 10rpx rgba(255,203,61,0.30);
  /* background: radial-gradient(circle, #ffe082, #ffca28, #ffb300); */
  background: rgba(255,203,61,0.80);
}

.onemore{
  font-size:20px; 
  font-family: "微软雅黑";
  color: #fff;
  border-radius: 45rpx;
  text-shadow:1px 1px #aaa;
  box-shadow:0rpx 10rpx 50rpx 10rpx rgba(255,203,61,0.30);
  /* background: linear-gradient(to right, #ffd94b, #ffcb3d ,#f0be2e); */
  background: rgba(255,203,61,0.80);
}





